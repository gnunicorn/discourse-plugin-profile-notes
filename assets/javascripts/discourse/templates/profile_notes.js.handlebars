
<h3>{{fa-icon "pencil-square-o"}} Private Notes</h3>
<p class="info">Notes added here are for your eyes only. No one else (including the profile you are looking at) can read them.</p>

{{#if view.showAddNote}}
<div>
  <textarea></textarea>
  <div class="controls">
    {{#if view.is_staff}}
      <label><input type="checkbox" class="share-with-staff" checked="checked"> share with staff</input></label>
    {{/if}}
    <button {{action addNote target="view"}} class="btn btn-primary">Add Note</button> <a {{action cancelAddNote target="view"}}>cancel</a>
  </div>
</div>
{{else}}
  <button {{action showAddNote target="view"}} class="btn show-note">{{fa-icon "plus"}}Add Note</button>

{{/if}}


{{#if view.loading}}
  <i class="fa fa-spin fa-spinner"></i>
{{/if}}


{{#each view.notes}}
  {{#if this.staff}}
    <div class="note staff">

      <p><span class="user"><a href="/users/{{unbound this.user.username}}">{{this.user.name}}</a> </span> {{this.text}}</p>
      <span class="timestamp">{{format-date this.timestamp}}</span> <span class="shared">shared with all staff</span>
  {{else}}
    <div class="note">
      <p>{{this.text}}</p>
      <span class="timestamp">{{format-date this.timestamp}}</span> <span class="private">for your eyes only</span>
  {{/if}}
  </div>
{{/each}}

